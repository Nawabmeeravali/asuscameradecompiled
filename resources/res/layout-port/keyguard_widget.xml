<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/camera_controls" android:background="@color/default_background" android:layout_width="match_parent" android:layout_height="match_parent">
